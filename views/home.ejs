<html>
    <head>
        <title>
            <%= title %>
        </title>
        <script src="https://kit.fontawesome.com/257bed162e.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="css/home.css">
    </head>
    
    <body>
        <h1>My Contact List</h1>
        <div class="contacts-list-container">
        <ul>
            <% for(let i of contact_List) { %> 
                 <li>
                    <p><%= i.name%></p>
                    <p><%= i.phone%></p>
                 </li>
                 <div class="delete-button">
                    <a href="/delete-contact/?phone=<%= i.phone%>"><i class="fas fa-window-close"></i></a>
                 </div>
            <%}%>

        </ul>
    </div>
        <form action="/create-contact" method="post">
            <input type="text" name="name" placeholder="Enter Your Name">
            <input type="text" name="phone" placeholder="Enter Your PhoneNo">
            <button type="submit">Add Contact</button>
        </form>
        <script src="/javascript/home.js"></script>
    </body>
</html>